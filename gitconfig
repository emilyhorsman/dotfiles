[user]
    name = Emily Horsman
    email = me@emilyhorsman.com
    signingkey = 1A42163D
[core]
    excludesfile = ~/.gitignore_global
    editor = nvim
[color]
    ui = auto
[alias]
    a  = add
    c  = commit -m
    cm = commit
    l  = log --pretty=format:\"%h - %ar | %s%d [%an]\" --graph
    b  = branch -v
    cb = rev-parse --abbrev-ref HEAD
    s  = status
    co = checkout
    ss = status -s
    d  = diff
    ds = diff --staged
    amend = commit --amend --no-edit
    amendm = commit --amend
[push]
    default = simple
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
